                <li><a class="a-admin" href="@Url.Action("Messages", "Admin")">Messages<span class="glyphicon glyphicon-th-large" style="float: right; margin-top: 3px;"></span></a></li>
                <li><a class="a-admin" href="@Url.Action("Replies", "Admin")">Replies<span class="glyphicon glyphicon-th-large" style="float: right; margin-top: 3px;"></span></a></li>
            </ul>
        </div>
        <div class="container-fluid admin">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
