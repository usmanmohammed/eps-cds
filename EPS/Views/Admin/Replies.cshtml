@model IEnumerable<EPS.Models.MessageReply>

@{
    ViewBag.Title = "Replies";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-9 col-md-10 admin-main">
    <div class="col-md-12">
        <div class="padd-top well well-lg well-border">
            <h4>Message Replies</h4>
            <p>
                @Html.ActionLink("Add New", "CreateReply")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Message.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RepliedBy)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Content)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RepliedBy)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditReply", new { id = item.Id }) |
                            @Html.ActionLink("Details", "ReplyDetails", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteReply", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>